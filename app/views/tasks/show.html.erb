<h1 class="mb-3"><%= @task.title %></h1>

  <div class="border rounded p-3 mb-3 bg-light-subtle">
    <%= simple_format @task.details %>
  </div>

  <!-- แสดงสถานะด้วย checkbox  -->
  <div class="form-check mb-4">
    <input
      class="form-check-input"
      type="checkbox"
      id="task_completed_show"
      <%= "checked" if @task.completed %>>
    <label class="form-check-label" for="task_completed_show">
      <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
    </label>
  </div>

  <!-- ลิงก์การทำงาน -->
  <p class="mb-0">
    <%= link_to "Edit", "/tasks/#{@task.id}/edit", class: "me-2 text-decoration-none" %> |
    <%= link_to "Delete", "/tasks/#{@task.id}",
          data: { turbo_method: :delete, turbo_confirm: "Delete this task?" },
          class: "mx-2 text-danger text-decoration-none" %> |
    <%= link_to "Back to list", "/tasks", class: "ms-2 text-decoration-none" %>
  </p>
